{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "id": "githublint.schema.json",
  "additionalItems": false,
  "additionalProperties": false,
  "definitions": {
    "source": {
      "$id": "#definitions/source",
      "additionalProperties": false,
      "title": "Source",
      "type": "object",
      "properties": {
        "enabled": {"type": "boolean"},
        "filter": {"type": "string"}
      }
    },
    "disposition": {
        "type": "string",
        "enum": ["required", "optional", "disallowed"]
    },
    "branch": {
      "readme": {
        "$id": "#definitions/branch",
        "properties": {
          "name": {"type": "string"},
          "enabled": {"type": "boolean"},
          "disposition": {"$ref": "#/definitions/disposition"},
          "protected": {"type": "boolean"}
        }
      }
    },
    "repository": {
      "$id": "#definitions/repository",
      "additionalProperties": false,
      "type": "object",
      "properties": {
        "name": {"type": "string"},
        "enabled": {"type": "boolean"},
        "branches": {"type": "array", "items": {"$ref": "#/definitions/branch"}},
        "public": {"type": "boolean"},
        "homepage": {"type": "string"},
        "default_branch": {"type": "string"}
      }
    }
  },
  "type": "object",
  "properties": {
    "$schema": {"type": "string"},
    "additionalProperties": false,
    "github": {"$ref": "#/definitions/source"},
    "repositories": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/repository"
      }
    }
  }
}